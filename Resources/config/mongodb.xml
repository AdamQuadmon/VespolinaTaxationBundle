<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	 <parameters>
        <parameter key="vespolina.taxation.class">Vespolina\TaxationBundle\Document\TaxationManager</parameter>
    </parameters>

	
    <services>
        <service id="vespolina.taxation.taxation_manager" class="%vespolina.taxation.class%">
            <argument type="service" id="doctrine.odm.mongodb.default_document_manager" />
        </service>
        <service id="vespolina.taxation_manager" alias="vespolina.taxation.taxation_manager" />

    </services>
</container>
