<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Vespolina\TaxationBundle\Entity\TaxRate" table="tax_rate">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
        <field name="code"      fieldName="code"    type="string" id="true"/>
        <field name="name"      fieldName="name"    type="string" />
        <field name="rate"      fieldName="rate"    type="float" />
        <many-to-one field="tax_category_id" target-entity="Vespolina\TaxationBundle\Entity\TaxCategory" />
        <many-to-one field="tax_zone_id" target-entity="Vespolina\TaxationBundle\Entity\TaxZone" inversed-by="taxRates">
            <join-column name="tax_zone_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>
